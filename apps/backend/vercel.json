{
  "version": 2,
  "buildCommand": "cd ../.. && npm install --include=dev && npm run build --workspace=packages/shared-types && cd apps/backend && npm install --include=dev && npm run build",
  "installCommand": "cd ../.. && npm install --include=dev",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "api/node_modules/**",
          "node_modules/@falconi/**",
          "../../node_modules/@falconi/**"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}

